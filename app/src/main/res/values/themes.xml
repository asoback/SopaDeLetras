<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.SopaDeLetras" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/defaultPrimary</item>
        <item name="colorPrimaryVariant">@color/defaultBackgroundColorVariant</item>
        <item name="colorOnPrimary">@color/defaultOnPrimary</item>
        <item name="colorSecondary">@color/defaultSecondary</item>
        <item name="colorSecondaryVariant">@color/defaultTextColorVariant</item>
        <item name="colorOnSecondary">@color/defaultOnSecondary</item>
        <item name="android:windowBackground">@color/defaultBackgroundColor</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="toolbarStyle">@style/ToolbarTheme</item>
    </style>

    <!-- Custom Toolbar theme -->
    <style name="ToolbarTheme" parent="Widget.MaterialComponents.Toolbar.Surface">
        <item name="titleTextColor">@color/toolbarTitleColor</item>
        <item name="subtitleTextColor">@color/toolbarSubtitleColor</item>
        <item name="android:textColorSecondary">@color/toolbarItemColor</item> <!-- for menu items -->
    </style>

    <style name="Theme.SopaDeLetras" parent="Base.Theme.SopaDeLetras" />
</resources>